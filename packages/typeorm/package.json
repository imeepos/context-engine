    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@sker/typescript-config": "workspace:*",
    "@sker/core": "workspace:*",
    "@sker/eslint-config": "workspace:*",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.39.2",
    "tsup": "^8.3.5",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public",
    "registry": "http://43.240.223.138:4873"
  }
